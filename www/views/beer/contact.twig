{% extends "layout/default_beer.twig" %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<h1 class="text-center">Bread Beer Shop - Contact</h1>  
<section id="profile_section" class="row no-gutters justify-content-center align-items-center mb-5">
        <form id='contactForm' method="post" action="" class="container"> 
            <div class="row no-gutters"> 
                <div class="form-group col-12 col-sm">  
                    <label for="from">Adresse mail</label>  
                    <input class="form-control" type="text" name="from" id="from" placeholder="Votre adresse mail" />  
                </div>  
                <div class="form-group col-12 col-sm">  
                    <label for="object">Objet</label>  
                    <input class="form-control" type="text" name="object" id="object" placeholder="Objet du mail" />  
                </div>
            </div>  
            <div class="form-group">  
                <p><label for="message">Message</label></p>
                <textarea class="form-control" name="message" id="message" rows="10" cols="80"></textarea>  
            </div>  
            <div>   
                <input class="btn btn-primary" type="submit" name="send" value="Envoyer" />  
            </div>  
        </form>  

</section>
{% endblock %}