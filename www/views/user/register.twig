{% extends 'layout/default_beer.twig' %}

{% block body %}
  <section class="container mb-5 mt-5">
        <h1>{{ page }}</h1>

        {% if message %}
            <div class="alert alert-info">{{ message }}</div>
        {% endif %}
        <form method="POST" action="">
            <div class="row">
                <div class="form-group col-12 col-sm">
                    <label for="">Adresse mail</label>
                    <input class="form-control" type="email" name="mail" placeholder="Votre courriel">
                </div>
                <div class="form-group col-12 col-sm">
                    <label for="">Verification adresse mail</label>
                    <input class="form-control" type="email" name="mailVerify" placeholder="vérification de votre courriel">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12 col-sm">
                    <label for="">Nom</label>
                    <input class="form-control" type="text" name="lastname" placeholder="Votre nom">
                </div>
                <div class="form-group col-12 col-sm">
                    <label for="">Prénom</label>
                    <input class="form-control" type="text" name="firstname" placeholder="Votre prénom">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12 col-sm">
                    <label for="">Adresse</label>
                    <input class="form-control" type="text" name="address" placeholder="Votre adresse">
                </div>
                <div class="form-group col-12 col-sm">
                    <label for="">Code postal</label>
                    <input class="form-control" type="text" name="zipCode" placeholder="Votre code postal">
                </div>
            </div>
            <div class="form-group">
                <label for="">Ville</label>
                <input class="form-control" type="text" name="city" placeholder="Votre ville">
            </div>
            <div class="row">
                <div class="form-group col-12 col-sm">
                    <label for="">Pays</label>
                    <input class="form-control" type="text" name="country" placeholder="Votre pays">
                </div>
                <div class="form-group col-12 col-sm">
                    <label for="">Numéro de téléphone</label>
                    <input class="form-control" type="tel" name="phone" placeholder="Votre numéro de téléphone">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-12 col-sm">
                    <label for="">Mot de passe</label>
                    <input class="form-control" type="password" name="password" placeholder="Votre mot de passe">
                </div>
                <div class="form-group col-12 col-sm">
                    <label for="">Répétez le mot de passe</label>
                    <input class="form-control" type="password" name="passwordVerify" placeholder="confirmez votre mot de passe">
                </div>
            </div>
            <button class="btn btn-primary" type="submit">S'inscrire</button>
        </form>
    </section>
{% endblock %}